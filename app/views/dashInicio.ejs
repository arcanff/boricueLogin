<!DOCTYPE html>
<html lang="en">
<%- include("./partials/dashHead.ejs"); %>
<body>
    <%- include("./partials/dashMenu.ejs"); %>

    <!-- Start Products  -->
    <div class="products-box">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="title-all text-center">
                        <h1>BIENVENIDO A BORICUE</h1>
                        <p>Algunos de los productos que se han publicado en la pagina</p>
                    </div>
                </div>
            </div>

            <div class="row special-list">
                <!-- Iterar sobre los productos -->
                <% if (products && products.length > 0) { %>
                    <% products.forEach(product => { %>
                        <div class="col-lg-3 col-md-6 special-grid">
                            <div class="products-single fix">
                                <div class="box-img-hover">
                                    <div class="type-lb">
                                        <p class="sale"><%= product.categoria %> </p>
                                    </div>
                                    <img src="/images/<%= product.imagen %>" class="img-fluid" alt="Image">

                                    <div class="mask-icon">
                                        <ul>
                                            <li><a href="#" data-toggle="tooltip" data-placement="right" title="Whatsapp"><i class="fas fa-sync-alt"></i></a></li>
                                            <li><a href="#" data-toggle="tooltip" data-placement="right" title="Chatear"><i class="far fa-heart"></i></a></li>
                                        </ul>
                                        <a class="cart" href="#">AÃ±adir al carro</a>
                                    </div>
                                </div>
                                <div class="why-text">
                                    <h4><%= product.nombre %></h4>
                                    <h6><%= product.descripcion %></h6>
                                    <h5><%= product.precio %></h5>
                                    <h5><a class="cart" href="#">Comprar</a></h5>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>No hay productos disponibles.</p>
                <% } %>
            </div>
        </div>
    </div>
    <!-- End Products  -->

    <%- include("./partials/dashFooter.ejs"); %>
</body>
</html>
